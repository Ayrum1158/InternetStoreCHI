@model PL.Models.ProductInfoVM

@{
    ViewData["Title"] = Model.Name;
}

<style>
    div.row > div,
    div.row > div > div {
        padding: 1em;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-2 border border-secondary">
            thumbnail
        </div>
        <div class="ml-1 col-md-7">
            <div class="row text-muted border border-secondary">@Model.Id - @Model.Category</div>
            <div class="row border border-secondary">@Model.Name</div>
            <div class="row border border-secondary">@Model.Price</div>
            <div class="row border border-secondary">
                <button class="btn btn-primary" id="addToCartBtn">Add to cart</button>
            </div>
        </div>
    </div>
    <div class="mt-3 border border-secondary col-9">
        @Model.Description
    </div>
</div>

@section Scripts {
    <script>
        let productId = @Model.Id;
    </script>
    <script src="~/js/IndexScripts.js"></script>
}
