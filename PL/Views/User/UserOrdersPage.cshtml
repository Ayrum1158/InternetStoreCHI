@model PL.Models.UserOrdersPageVM

<h3>Orders</h3>

<div class="container-fluid">
    @*Main content*@
    @{
        foreach (var order in Model.ItemsPurchased)
        {
            <div class="container border border-secondary">
                <div class="container">
                    <div class="row text-secondary">
                        Order id: @order.OrderId
                    </div>
                    <div class="row">
                        Purchased: @order.TimePurchased
                    </div>
                    <div class="row">
                        <div class="container-fluid">
                            <div class="row">Products:</div>
                            <hr style="margin-top: 0"/>
                            @foreach (var item in order.ItemsPurchased)
                            {
                                <div class="row pl-1">@item.ProductName x @item.Quantity</div>
                                <hr />
                            }
                        </div>
                    </div>
                    <div class="row">
                        Total price: @order.TotalOrderPrice
                    </div>
                </div>
            </div>
            <hr />
        }
    }
</div>
