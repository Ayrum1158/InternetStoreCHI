@model PL.Models.UserRegistrationPageVM

@{
    ViewData["Title"] = "Registration page";
}

<h1>Registration Page</h1>

<h4>UserRegistrationPageVM</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Register" asp-controller="User" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" id="passwordInput" class="form-control" onkeyup="checkConfirmPassword()" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="ConfirmPassword" id="confirmPasswordInput" class="form-control" onkeyup="checkConfirmPassword()" />
                <span asp-validation-for="ConfirmPassword" id="confirmPasswordValidation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input disabled type="submit" value="Create" id="submitBtn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        let pass = document.getElementById("passwordInput");
        let confirmPass = document.getElementById("confirmPasswordInput");
        let confirmPassValidationMessage = document.getElementById("confirmPasswordValidation");
        let submitBtn = document.getElementById("submitBtn");

        function checkConfirmPassword() {
            if (pass.value != confirmPass.value) {
                confirmPassValidationMessage.innerText = "Password and ConfirmPassword do not match";
                submitBtn.setAttribute("disabled", "");
            }
            else {
                confirmPassValidationMessage.innerText = "";
                submitBtn.removeAttribute("disabled", "");
            }
        };

    </script>
}
